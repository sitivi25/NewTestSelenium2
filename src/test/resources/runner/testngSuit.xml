<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="testngSuite" verbose="1" >
    <test name="Smoke" >
        <groups>
            <run>
                <include name="home"></include>
                <exclude name="feature"></exclude>
            </run>
        </groups>

        <classes>
            <class name="LoginTest">
                <methods>
                    <include name="fillEmailAndPasswordFields"></include>
                    <include name="OpenSignInPage"></include>
                    <exclude name="fillEmailAndPasswordFieldsAndValidateError"></exclude>
                </methods>
            </class>
            <class name="DropdownTest">
                <methods>
                    <include name="DropdownListHW"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>

